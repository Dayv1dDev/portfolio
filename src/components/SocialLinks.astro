---
interface Props {
    link: string
    class?: string
}

const { link, class: className } = Astro.props
---

<a href={link} class=`
    flex items-center justify-center 
    hover:bg-[#eee] hover:text-black 
    font-medium ease-in-out duration-300 
    border rounded-full
    px-4 
    ${className}
    ` 
    target="_blank" 
    rel="noopener noreferrer"
>
    <slot />
</a>