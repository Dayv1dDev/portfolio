---
import Button from './Button.astro'

interface Props {
    date: string
    title: string
    subtitle: string
    description: string
    link: string
}

const { date, title, subtitle, description, link } = Astro.props
---

<li class="mb-10 ms-4">
    <div class="absolute w-3 h-3 bg-gray-100 rounded-full mt-1.5 -start-1.5 border border-gray-200"></div>
    <time class="mb-1 sm:text-sm text-xs font-normal leading-none text-gray-200">{date}</time>
    <h3 class="sm:text-xl text-lg text-balance leading-none sm:my-0 my-1 font-semibold text-white">{title}</h3>
    <h4 class="text-purple-300 sm:text-lg text-base font-semibold">{subtitle}</h4>
    <p class="text-wrap mb-4 md:text-base text-sm font-normal text-gray-200">{description}</p>
    <Button href={link} class="text-sm">View project
        <svg class="inline w-3 h-3 ml-1 mb-0.5 group-hover:rotate-[-45deg] transition-transform duration-200 rtl:rotate-180" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
            <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
        </svg>
    </Button>
</li>